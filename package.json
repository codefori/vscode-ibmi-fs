{
  "name": "vscode-ibmi-fs",
  "displayName": "IBM i FileSystem",
  "description": "File system provider for IBM i QSYS",
  "version": "0.0.1",
  "preview": true,
  "license": "MIT",
  "engines": {
    "vscode": "^1.71.0"
  },
  "author": {
    "name": "Halcyon Tech Ltd",
    "url": "https://github.com/halcyon-tech"
  },
  "publisher": "halcyontechltd",
  "repository": {
    "url": "https://github.com/halcyon-tech/vscode-ibmi-fs"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:object",
    "onFileSystem:job",
    "onCustomEditor:vscode-ibmi-fs.editor"
  ],
  "extensionDependencies": [
    "HalcyonTechLtd.code-for-ibmi"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "vscode-ibmi-fs.editor",
        "displayName": "Object Editor",
        "selector": [
          {
            "filenamePattern": "object*/**/*.{BNDDIR}"
          },
          {
            "filenamePattern": "object*/**/*.{MSGF}"
          },
          {
            "filenamePattern": "object*/**/*.{DTAARA}"
          },
          {
            "filenamePattern": "object*/**/*.{PGM,SRVPGM}"
          },
          {
            "filenamePattern": "object*/**/*.{CMD}"
          },
          {
            "filenamePattern": "job*/**/**/*.{JOB}"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "vscode-ibmi-fs.createJobFilter",
        "enablement": "code-for-ibmi:connected == true",
        "title": "Create job filter",
        "category": "IBM i",
        "icon": "$(filter)"
      },
      {
        "command": "vscode-ibmi-fs.refreshJobBrowser",
        "enablement": "code-for-ibmi:connected == true",
        "title": "Refresh job browser",
        "category": "IBM i",
        "icon": "$(refresh)"
      },
      {
        "command": "vscode-ibmi-fs.maintainJobFilter",
        "enablement": "code-for-ibmi:connected == true",
        "title": "Maintain job filter",
        "category": "IBM i",
        "icon": "$(filter)"
      },
      {
        "command": "vscode-ibmi-fs.deleteJobFilter",
        "enablement": "code-for-ibmi:connected == true",
        "title": "Delete job filter",
        "category": "IBM i",
        "icon": "$(remove)"
      },
      {
        "command": "vscode-ibmi-fs.endJob",
        "enablement": "code-for-ibmi:connected == true",
        "title": "End job",
        "category": "IBM i",
        "icon": "$(close)"
      },
      {
        "command": "vscode-ibmi-fs.changeJob",
        "enablement": "code-for-ibmi:connected == true",
        "title": "Change job",
        "category": "IBM i",
        "icon": "$(close)"
      },
      {
        "command": "vscode-ibmi-fs.holdJob",
        "enablement": "code-for-ibmi:connected == true",
        "title": "Hold job",
        "category": "IBM i",
        "icon": "$(close)"
      },
      {
        "command": "vscode-ibmi-fs.releaseJob",
        "enablement": "code-for-ibmi:connected == true",
        "title": "Release job",
        "category": "IBM i",
        "icon": "$(close)"
      },
      {
        "command": "vscode-ibmi-fs.propertiesJob",
        "enablement": "code-for-ibmi:connected == true",
        "title": "Propertie job",
        "category": "IBM i",
        "icon": "$(close)"
      },
      {
        "command": "vscode-ibmi-fs.historyJob",
        "enablement": "code-for-ibmi:connected == true",
        "title": "History job",
        "category": "IBM i",
        "icon": "$(filter)"
      }
    ],
    "views": {
      "ibmi-explorer": [
        {
          "id": "jobBrowser",
          "name": "Job Browser",
          "when": "code-for-ibmi:connected == true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vscode-ibmi-fs.createJobFilter",
          "group": "navigation",
          "when": "view == jobBrowser"
        },
        {
          "command": "vscode-ibmi-fs.refreshJobBrowser",
          "group": "navigation",
          "when": "view == jobBrowser"
        }
      ],
      "view/item/context": [
        {
          "command": "vscode-ibmi-fs.maintainJobFilter",
          "when": "view == jobBrowser"
        },
        {
          "command": "vscode-ibmi-fs.deleteJobFilter",
          "when": "view == jobBrowser"
        },
        {
          "command": "vscode-ibmi-fs.endJob",
          "when": "viewItem == activeJob || viewItem == myActiveJob",
          "group": "1_activeJobList@1"
        },
        {
          "command": "vscode-ibmi-fs.changeJob",
          "when": "viewItem == activeJob || viewItem == myActiveJob",
          "group": "1_activeJobList@1"
        },
        {
          "command": "vscode-ibmi-fs.holdJob",
          "when": "viewItem == activeJob || viewItem == myActiveJob",
          "group": "1_activeJobList@1"
        },
        {
          "command": "vscode-ibmi-fs.releaseJob",
          "when": "viewItem == activeJob || viewItem == myActiveJob",
          "group": "1_activeJobList@1"
        },
        {
          "command": "vscode-ibmi-fs.propertiesJob",
          "when": "viewItem == activeJob || viewItem == myActiveJob",
          "group": "1_activeJobList@1"
        },
        {
          "command": "vscode-ibmi-fs.historyJob",
          "when": "viewItem == activeJob || viewItem == myActiveJob",
          "group": "1_activeJobList@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.1.0"
  }
}
